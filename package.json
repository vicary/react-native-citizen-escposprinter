{
  "private": true,
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "quotes": [
        "warn",
        "double"
      ]
    }
  },
  "eslintIgnore": [
    "*.js",
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "packageManager": "yarn@3.3.1"
}
